<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:ellipsize="start"
        android:textColor="@color/black"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_limpar"
            style="@style/Operators_Button"
            android:text="C"/>

        <TextView
            android:id="@+id/txt_divisao"
            style="@style/Operators_Button"
            android:text="/"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_sete"
            style="@style/Numbers_Button"
            android:text="7"/>

        <TextView
            android:id="@+id/txt_oito"
            style="@style/Numbers_Button"
            android:text="8"/>

        <TextView
            android:id="@+id/txt_nove"
            style="@style/Numbers_Button"
            android:text="9"/>

        <TextView
            android:id="@+id/txt_multiplicacao"
            style="@style/Operators_Button"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_quatro"
            style="@style/Numbers_Button"
            android:text="4"/>

        <TextView
            android:id="@+id/txt_cinco"
            style="@style/Numbers_Button"
            android:text="5"/>

        <TextView
            android:id="@+id/txt_seis"
            style="@style/Numbers_Button"
            android:text="6"/>

        <TextView
            android:id="@+id/txt_subtracao"
            style="@style/Operators_Button"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_um"
            style="@style/Numbers_Button"
            android:text="1"/>

        <TextView
            android:id="@+id/txt_dois"
            style="@style/Numbers_Button"
            android:text="2"/>

        <TextView
            android:id="@+id/txt_tres"
            style="@style/Numbers_Button"
            android:text="3"/>

        <TextView
            android:id="@+id/txt_adicao"
            style="@style/Operators_Button"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_ponto"
            style="@style/Numbers_Button"
            android:text="."/>

        <TextView
            android:id="@+id/txt_zero"
            style="@style/Numbers_Button"
            android:text="0"/>

        <ImageView
            android:id="@+id/txt_apagar"
            style="@style/Numbers_Button"
            android:src="@drawable/backspace"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/txt_igual"
            style="@style/Operators_Button"
            android:text="="/>

    </LinearLayout>
</LinearLayout>